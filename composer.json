{
	"name": "pascalheidmann/feature-toggle",
	"license": "MIT",
	"readme": "README.md",
	"type": "library",
	"version": "0.1.0",
	"authors": [
		{
			"name": "Pascal Heidmann",
			"email": "pascal@heidmann.io"
		}
	],
	"require": {
		"php": "^7.4 || ~8.0.0 || ~8.1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"phpstan/phpstan": "^1.1",
		"phpstan/phpstan-phpunit": "^1.0",
		"jetbrains/phpstorm-attributes": "^1.0"
	},
	"suggest": {
		"laminas/laminas-modulemanager": "If you want to use this library in your laminas project with ease",
		"symfony/dependency-injection": "For Symfony integration",
		"symfony/http-kernel": "For Symfony integration"
	},
	"autoload": {
		"psr-4": {
			"FeatureToggle\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"FeatureToggle\\Tests\\": "tests/"
		}
	},
	"extra": {
		"laminas": {
			"component": "FeatureToggle",
			"config-provider": "FeatureToggle\\ConfigProvider"
		}
	},
	"scripts": {
		"check": [
			"@phpunit",
			"@phpstan"
		],
		"phpunit": "vendor/bin/phpunit",
		"phpstan": "vendor/bin/phpstan"
	}
}
